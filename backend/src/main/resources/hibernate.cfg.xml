<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Disable the second-level cache -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCachingRegionFactory</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <mapping class="Elementos.Ing.AgileTasks.modelo.Nota"/>
        <mapping class="Elementos.Ing.AgileTasks.modelo.Usuario"/>
        <!--mapping class="ar.edu.unq.eperdemic.Elementos.Ing.AgileTasks.modelo.Mutacion"/>
        <mapping class="ar.edu.unq.eperdemic.Elementos.Ing.AgileTasks.modelo.Ubicacion"/>
        <mapping class="ar.edu.unq.eperdemic.Elementos.Ing.AgileTasks.modelo.Vector"/>-->

    </session-factory>
</hibernate-configuration>